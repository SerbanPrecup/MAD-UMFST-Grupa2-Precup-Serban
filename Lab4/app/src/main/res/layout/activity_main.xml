<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Number"
        android:id="@+id/edtxtFirst"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Second Number"
        android:id="@+id/edtxtSecond"
        android:layout_below="@+id/edtxtFirst"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:layout_below="@+id/edtxtSecond"
        android:id="@+id/btnAdd"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUB"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnAdd"
        android:layout_below="@id/edtxtSecond"
        android:id="@+id/btnSub"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Div"
        android:layout_below="@+id/btnAdd"
        android:id="@+id/btnDiv"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MUL"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/btnDiv"
        android:layout_below="@id/btnSub"
        android:id="@+id/btnMul"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnDiv"
        android:text=""
        android:id="@+id/txtResult"
        />

</RelativeLayout>